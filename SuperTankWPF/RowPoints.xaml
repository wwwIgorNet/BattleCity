<UserControl x:Class="SuperTankWPF.RowPoints"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SuperTankWPF"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource pointsText}"/>
    </UserControl.Resources>

    <StackPanel  Orientation="Horizontal">
        <TextBlock x:Name="pts1Player" Text="  "/>
        <TextBlock Text="PTS"/>
        <StackPanel x:Name="centr" Orientation="Horizontal" Margin="0">
            <TextBlock x:Name="countTank1Player" Text="  "/>
            <TextBlock Text="←" Margin="-5,0,2,0"/>
            <Image x:Name="imgTank" d:DesignWidth="40"/>
            <TextBlock Text="→" Margin="2,0,-5,0"/>
            <TextBlock x:Name="countTank2Player" Text="  "/>
        </StackPanel>
        <TextBlock Text="PTS"/>
        <TextBlock x:Name="pts2Player" Text="  "/>

    </StackPanel>
</UserControl>
