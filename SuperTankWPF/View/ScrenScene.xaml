<UserControl x:Class="SuperTankWPF.View.ScrenScene"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SuperTankWPF.View"
             xmlns:unit="clr-namespace:SuperTankWPF.Units"
             xmlns:model="clr-namespace:SuperTankWPF.Model"
             mc:Ignorable="d" 
             Background="Black" 
             Height="{Binding Source={x:Static model:ConfigurationWPF.HeightBoard}}" 
             Width="{Binding Source={x:Static model:ConfigurationWPF.WidthBoard}}">
    <Canvas DataContext="{Binding ScrenScene, Mode=OneWay, Source={StaticResource Locator}}" x:Name="board"/>
</UserControl>
