<UserControl x:Class="SuperTankWPF.View.LevelInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SuperTankWPF.View"
             xmlns:model="clr-namespace:SuperTankWPF.Model"
             mc:Ignorable="d" 
             DataContext="{Binding LevelInfoLeve, Source={StaticResource Locator}}"
             Height="{Binding Source={x:Static model:ConfigurationWPF.HeightBoard}}" 
             Width="{Binding Source={x:Static model:ConfigurationWPF.WidthTank}}">
    <UserControl.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource infoText}">
            <Setter Property="Foreground" Value="Black"/>
        </Style>

    </UserControl.Resources>
    <Grid>
        <Image Source="{Binding Source={x:Static model:BitmapImages.DashboardInfo}}"/>
        <DockPanel LastChildFill="False">
            <UniformGrid x:Name="uniformGrid" Columns="2" Rows="10" DockPanel.Dock="Top"/>
            <StackPanel Orientation="Vertical" DockPanel.Dock="Bottom">
                <TextBlock x:Name="label1Player" Text="0" Margin="20,0,0,0"/>
                <Rectangle Height="100"/>
                <TextBlock x:Name="labelLevel" Text="0" Margin="20,0,0,0"/>
                <Rectangle Height="80"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
