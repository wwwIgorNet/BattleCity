<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperTankWPF"
        xmlns:View="clr-namespace:SuperTank.View;assembly=ViewLibrary" x:Class="SuperTankWPF.MainWindow"
        mc:Ignorable="d"
        Title="Battle City"
        Icon="Content\Ico\Ico.ico"
        Loaded="Window_Loaded" 
        KeyUp="Window_KeyUp"
        d:DesignHeight="{Binding Source={x:Static View:ConfigurationView.WindowClientHeight}}"
        d:DesignWidth="{Binding Source={x:Static View:ConfigurationView.WindowClientWidth}}">
    <Grid>
        <local:StartScren x:Name="startScren" Visibility="Collapsed"/>
        <local:ScrenGame Visibility="Collapsed"/>
        <local:ScrenScore/>
    </Grid>
</Window>
