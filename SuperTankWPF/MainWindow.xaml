<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperTankWPF"
        xmlns:model="clr-namespace:SuperTankWPF.Model"
        x:Class="SuperTankWPF.MainWindow"
        xmlns:view="clr-namespace:SuperTankWPF.View"
        mc:Ignorable="d"
        Title="Battle City"
        Icon="Content\Ico\Ico.ico"
        Loaded="Window_Loaded" 
        KeyUp="Window_KeyUp"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        d:DesignHeight="{Binding Source={x:Static model:ConfigurationWPF.WindowClientHeight}}"
        d:DesignWidth="{Binding Source={x:Static model:ConfigurationWPF.WindowClientWidth}}">
    <Grid>
        <view:StartScren x:Name="startScren" Visibility="Collapsed"/>
        <view:ScrenGame Visibility="Collapsed"/>
        <view:ScrenScore Visibility="Collapsed"/>
        <view:ScrenGameOver/>
    </Grid>
</Window>
