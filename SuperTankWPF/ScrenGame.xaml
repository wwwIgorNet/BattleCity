<UserControl x:Class="SuperTankWPF.ScrenGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SuperTankWPF"
             mc:Ignorable="d" 
             Background="Gray"
             d:DesignHeight="{Binding Source={x:Static local:ConfigurationWPF.WindowClientHeight}}"
             d:DesignWidth="{Binding Source={x:Static local:ConfigurationWPF.WindowClientWidth}}">
    <StackPanel Orientation="Horizontal">
        <Canvas Margin="{Binding Source={x:Static local:ConfigurationWPF.WidthTile}}" Background="Black" Height="{Binding Source={x:Static local:ConfigurationWPF.HeightBoard}}" Width="{Binding Source={x:Static local:ConfigurationWPF.WidthBoard}}"></Canvas>
    </StackPanel>
</UserControl>
